{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDirs": [
            "src",
            "test"
        ],
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6",
        "lib": ["es2017", "es2018", "es2019"]
    },
    "include": [
        "src/**/*"
    ]
}